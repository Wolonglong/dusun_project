#!/bin/sh

case "$1" in
	start)
		printf "Starting dsdaemon: "
		start-stop-daemon -S -x /usr/bin/dsdaemon
		[ $? = 0 ] && echo "OK" || echo "FAIL"
		;;
	stop)
		printf "Stopping dsdaemon: "
		start-stop-daemon -K -q -x /usr/bin/dsdaemon
		[ $? = 0 ] && echo "OK" || echo "FAIL"
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
esac

exit 0
